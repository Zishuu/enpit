<html>
    <head>
        <title> イベント詳細 </title>
    </head>
    
    <body>
      <h1><%= @event.name %></h1>

      <table class="table table-bordered">
	<tbody>
	  <tr>
            <th>場所</th>
	    <th><%= @event.place %></th>
	  </tr>
	  <tr>
            <th>日付</th>
	    <th><%= @event.month %>月<%= @event.day %>日</th>
	  </tr>
	  <tr>
	      <th>分類</th>
	      <th><%= @event.course %></th>
	      </tr>
	</tbody>
      </table>
	<% unless current_user?(@user) %>
  	<div id="follow_form">
  	<% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  	<% else %>
    <%= render 'follow' %>
  	<% end %>
  </div>
<% end %>
    </body>
</html>

                
